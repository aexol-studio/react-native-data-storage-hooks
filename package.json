{
  "name": "react-native-data-storage-hooks",
  "version": "1.0.0",
  "description": "A simple react native async storage hooks library based on the @react-native-async-storage/async-storage library",
  "main": "dist/module/index.ts",
  "module": "dist/module/index.ts",
  "react-native": "src/index.ts",
  "types": "dist/typescript/index.d.ts",
  "files": [
    "dist/",
    "src/"
  ],
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "prepare": "bob build"
  },
  "keywords": [
    "react-native",
    "async-storage",
    "ios",
    "android",
    "mobile",
    "data storage"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/Aexol/react-native-data-storage.git"
  },
  "bugs": {
    "url": "https://gitlab.com/Aexol/react-native-data-storage/issues"
  },
  "homepage": "https://gitlab.com/Aexol/react-native-data-storage#readme",
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.15.9",
    "@react-native-community/bob": "^0.17.1"
  },
  "peerDependencies": {
    "react": "17.x",
    "react-native": "0.6x"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.33",
    "@types/react-native": "^0.66.1",
    "@types/react-test-renderer": "^17.0.1",
    "babel-jest": "^26.6.3",
    "eslint": "7.14.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.66.2",
    "react-test-renderer": "17.0.2",
    "typescript": "^4.x.x"
  },
  "jest": {
    "preset": "react-native"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "module",
      "typescript"
    ]
  }
}
